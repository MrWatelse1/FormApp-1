@model IEnumerable<FormApplication.Models.FullFormModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tenantCount = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            S/N
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        <th>@Html.DisplayNameFor(model => model.SpouseModels)</th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HouseNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        tenantCount++;
        var spouseCount = 0;

        <tr>
            <td>@tenantCount</td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                @if (item.SpouseModels == null || item.SpouseModels.Count() == 0)
                {

                    <span>No Spouse</span>
                }
                else
                {
                    <table>
                        <tr>
                            <th>S/N</th>
                            <th>Name</th>
                            <th>Gender Type</th>
                            <th>Email Address</th>
                            <th>Number</th>
                        </tr>

                        @foreach (var spouse in item.SpouseModels)
                        {
                            spouseCount++;

                            <tr>
                                <td>@spouseCount</td>
                                <td>@spouse.Names</td>
                                <td>@spouse.Gender</td>
                                <td>@spouse.Email</td>
                                <td>@spouse.Number</td>
                            </tr>

                        }
                    </table>
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
