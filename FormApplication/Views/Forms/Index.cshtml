@model IEnumerable<FormApplication.Models.FullFormModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tenantCount = 0;
}

<h2>All Occupants</h2>

<p>
    @Html.ActionLink("Create New", "FormCreate")
</p>
<table class="table">
    <tr>
        <th>
            S/N
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HouseNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style="text-align:center;">@Html.DisplayNameFor(model => model.SpouseModels)</th>

    </tr>

    @foreach (var item in Model)
    {
        tenantCount++;
        var spouseCount = 0;

    <tr>
        <td>@tenantCount</td>
        <td>
            @Html.DisplayFor(modelItem => item.Fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HouseNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profession)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>

    

        <td>
            @if (item.SpouseModels == null || item.SpouseModels.Count() == 0)
                {

            <span hidden>No Spouse</span>
                }
                else
                {
            <table class="table">
                
                <tr>
                    <th>S/N</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email Address</th>
                    <th>Number</th>
                </tr>

                @foreach (var spouse in item.SpouseModels)
                {
                    spouseCount++;

                <tr>
                    <td>@spouseCount</td>
                    <td>@spouse.Names</td>
                    <td>@spouse.GenderType</td>
                    <td>@spouse.EmailAddress</td>
                    <td>@spouse.Number</td>
                </tr>

                }
            </table>
                }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>

    }

</table>
